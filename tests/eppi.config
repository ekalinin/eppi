%% -*- mode: Erlang; -*-
%% vim: set filetype=erlang:

%%%
%%% eppi config
%%%
[
    {eppi,
        [
            % Packages location
            {packages_dir, "./packages-2"},
            % Pypi url
            {pypi_url, "https://pypi.python.org/simple/"},
            % Check new packages in file system every N milliseconds
            {new_packages_check_period, 15000},
            % Check new packages no more often than N seconds
            {min_interval_between_checks, 5000},
            % Http port
            {http_port, 7891}
        ]
    },

    {lager, [
        {handlers, [
            {lager_console_backend, [debug,
                {lager_default_formatter, [
                    time," [",severity,"] ", pid, " (", module,"::", function, ") : ", message, "\n"]
                }]}
        ]}
    ]}
].
